{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "target": "es2019",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["**/*.js", "**/*.jsx"]
}
